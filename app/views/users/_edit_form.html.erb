	<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
		<div class="control-group">
	    	<legend> <%= @action %> User Profile </legend>
	  </div>
	<div class="control-group">
			<%= f.label :username, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :username, disabled: @action == "View" ? true : false %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :first_name, class: 'control-label' %>
			<div class="controls">
			  <%= f.text_field :first_name, disabled: @action == "View" ? true : false %>
			</div>
		</div>
		<div class="control-group">
		<%= f.label :last_name, class: 'control-label' %>
			<div class="controls">
			  <%= f.text_field :last_name, disabled: @action == "View" ? true : false %>
			</div>
		</div>
		<div class="control-group">
		<%= f.label :email, class: 'control-label' %>
			<div class="controls">
			  <%= f.text_field :email, disabled: @action == "View" ? true : false %>
			</div>
		</div>
		
			<div class="control-group">
		    <div class="controls">
		    <% if @action == "View" %>
					<%= link_to @option, edit_user_path(current_user), :class => "btn btn-primary" %>
				<% else %>
					<%= f.submit @option , class: "btn btn-primary" %>
				<% end %>
				</div>
			</div>
	<% end %>
