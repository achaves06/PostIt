<div class="row">
  <div class="well span1 text-center">
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br/>
    <%= comment.total_votes %>
    <br/>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>
  <div class = "comment span8 well">    
    <p> <%= comment.body %> <%=  link_to "for " + comment.post.title, post_path(comment.post) if @action %></p>
    <p>
      <span class="quiet">Posted by </span>
      <%= comment.creator.first_name + " " + comment.creator.last_name %>
      <small>on <%= friendly_date(comment.created_at) %></small>
    </p>
  </div>
</div>