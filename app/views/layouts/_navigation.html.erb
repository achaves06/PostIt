<ul class="nav">
  <li><%= link_to "Postit!", root_path, :class => 'brand' %></li>
  <ul class="nav navbar-nav">
    <li><%= link_to 'Create Post', new_post_path %></li>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Categories
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%=link_to 'All Categories', posts_path %> </li>
        <% Category.all.order('name ASC').each do |category| %>
          <li><%=link_to category.name, category_path(category)%> </li>
        <% end %>
        <li><%=link_to 'Add', new_category_path %></li>
      </ul>
    </li>
  </ul>
</ul>
<ul class="nav navbar-nav pull-right">
  <% if logged_in? %>
    <li class = "dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="icon-user icon-white"></i> <%= current_user.username %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
        <li><%= link_to "View Profile", user_path(current_user) %></li>
        <li><%= link_to "Logout", logout_path %></li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to "Login", login_path %></li>
    <li><%= link_to "Sign Up", signup_path %></li>
  <% end %>
</ul>


