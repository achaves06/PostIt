<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>
  <br/>
   <%= f.collection_select(:category_ids, @categories, :id, :name, {include_blank: 'Select a Category'}, {multiple: true}) %>
  <br/>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
